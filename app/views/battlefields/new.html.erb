<h1 class="title is-1">Create A Battlefield Player</h1>

<div class="box">
<%= form_for :battlefield, class: "form",url: battlefields_path do |f| %>
    <div class="field">
      <%= f.label :username, "Name:" ,class:"label"%>
      <%= f.text_field :name, class:"input" %>
    </div>
    
    <div class="field">
      <%= f.submit "Submit", class:"button" %>
    </div>
  <% end %>
</div>