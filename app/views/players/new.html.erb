<h1 class="">Create Player</h1>
<div class="box">
  <%= form_for :player, class: "form",url: players_path do |f| %>
    <div class="field">
      <%= f.label :username, "User Name:" ,class:"label"%>
      <%= f.text_field :username, class:"input" %>
    </div>
    <div class="field">
      <%= f.label :display_name, "Display Name:" ,class:"label"%>
      <%= f.text_field :display_name, class:"input" %>
    </div>
    <div class="field">
      <%= f.label :password, "Password:" ,class:"label"%>
      <%= f.password_field :password, class:"input" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Password Confirmation" ,class:"label"%>
      <%= f.password_field :password_confirmation, class:"input" %>
    </div>
    <div class="field has-text-right">
      <%= f.submit "Submit", class:"button is-primary" %>
    </div>
  <% end %>
</div>
<%= link_to "Log In", login_path, class:"is-link"  %>